{
  "openapi": "3.0.3",
  "info": {
    "title": "Claw-Empire API",
    "version": "1.2.0",
    "description": "Baseline OpenAPI contract for commonly used Claw-Empire endpoints."
  },
  "servers": [
    {
      "url": "/",
      "description": "Current origin (recommended for local docs)"
    },
    {
      "url": "http://127.0.0.1:8790",
      "description": "Local development (loopback)"
    },
    {
      "url": "http://localhost:8790",
      "description": "Local development (localhost)"
    }
  ],
  "tags": [
    {
      "name": "health"
    },
    {
      "name": "runtime"
    },
    {
      "name": "tasks"
    },
    {
      "name": "messages"
    },
    {
      "name": "projects"
    },
    {
      "name": "updates"
    },
    {
      "name": "docs"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API_AUTH_TOKEN"
      },
      "inboxSecret": {
        "type": "apiKey",
        "in": "header",
        "name": "x-inbox-secret"
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["error"],
        "additionalProperties": true
      },
      "Department": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["id", "name"],
        "additionalProperties": true
      },
      "Agent": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "department_id": {
            "type": ["string", "null"]
          },
          "role": {
            "type": "string"
          }
        },
        "required": ["id", "name"],
        "additionalProperties": true
      },
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        },
        "required": ["id", "title", "status"],
        "additionalProperties": true
      },
      "Message": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "message_type": {
            "type": "string"
          },
          "created_at": {
            "type": "number"
          }
        },
        "required": ["id", "content"],
        "additionalProperties": true
      },
      "Project": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "project_path": {
            "type": "string"
          }
        },
        "required": ["id", "name"],
        "additionalProperties": true
      }
    }
  },
  "paths": {
    "/api/health": {
      "get": {
        "tags": ["health"],
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Service health payload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/session": {
      "get": {
        "tags": ["runtime"],
        "summary": "Bootstrap authenticated session cookie",
        "responses": {
          "200": {
            "description": "Session ready"
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/departments": {
      "get": {
        "tags": ["runtime"],
        "summary": "List departments",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Department list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "departments": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Department"
                      }
                    }
                  },
                  "required": ["departments"]
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["runtime"],
        "summary": "Create department",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Department created"
          }
        }
      }
    },
    "/api/agents": {
      "get": {
        "tags": ["runtime"],
        "summary": "List agents",
        "security": [
          {
            "bearerAuth": []
          }
