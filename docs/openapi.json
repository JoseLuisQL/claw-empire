          }
        ],
        "responses": {
          "200": {
            "description": "Messages cleared"
          }
        }
      }
    },
    "/api/inbox": {
      "post": {
        "tags": ["messages"],
        "summary": "External webhook inbox",
        "security": [
          {
            "inboxSecret": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Webhook accepted"
          },
          "401": {
            "description": "Missing or invalid x-inbox-secret",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
